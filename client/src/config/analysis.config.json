{
  "api": {
    "endpoints": {
      "list": "/analysis/list",
      "analyze": "/analysis/:documentId",
      "passages": "/analysis/:documentId/passages",
      "passageList": "/analysis/:documentId/passage-list",
      "analyzePassage": "/analysis/:documentId/analyze-passage",
      "analyzeBatch": "/analysis/:documentId/analyze-passages",
      "getPassage": "/analysis/:documentId/passage/:passageNumber",
      "deleteVariant": "/analysis/:documentId/passage/:passageNumber/variant/:variantIndex"
    }
  },
  "ui": {
    "maxPassagesPerRow": 10,
    "animationDuration": "0.2s",
    "colors": {
      "selected": "var(--accent-primary)",
      "analyzed": "var(--success)",
      "pending": "var(--surface-soft-strong)",
      "error": "var(--danger)",
      "warning": "var(--warning)"
    }
  },
  "analysis": {
    "sections": [
      {
        "id": "sentenceAnalysis",
        "title": "📝 문장별 분석",
        "icon": "📝"
      },
      {
        "id": "deepAnalysis",
        "title": "🔍 의미/분석/해설",
        "icon": "🔍"
      },
      {
        "id": "keyExpressions",
        "title": "💡 핵심표현 & 동의어/반의어",
        "icon": "💡"
      },
      {
        "id": "examplesAndBackground",
        "title": "📚 예시/배경지식",
        "icon": "📚"
      },
      {
        "id": "comprehensive",
        "title": "📖 종합 정리",
        "icon": "📖"
      }
    ]
  }
}
