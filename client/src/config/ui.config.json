{
  "theme": {
    "colors": {
      "primary": "#667eea",
      "secondary": "#764ba2",
      "success": "#10B981",
      "error": "#EF4444",
      "warning": "#F59E0B",
      "info": "#3B82F6",
      "dark": "#111827",
      "light": "#F3F4F6"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "dark": "linear-gradient(135deg, #1F2937 0%, #111827 100%)",
      "success": "linear-gradient(135deg, #10B981 0%, #059669 100%)"
    },
    "animations": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "layout": {
    "sidebar": {
      "width": "250px",
      "collapsedWidth": "70px",
      "breakpoint": 768
    },
    "container": {
      "maxWidth": "1200px",
      "padding": "20px"
    }
  },
  "components": {
    "button": {
      "borderRadius": "10px",
      "padding": {
        "small": "8px 16px",
        "medium": "12px 24px",
        "large": "16px 32px"
      }
    },
    "card": {
      "borderRadius": "20px",
      "padding": "24px",
      "shadow": "0 10px 30px rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "borderRadius": "10px",
      "padding": "12px 16px",
      "fontSize": "14px"
    }
  },
  "toast": {
    "position": "top-right",
    "duration": 3000,
    "maxToasts": 3
  }
}