{
  "theme": {
    "colors": {
      "primary": "var(--indigo)",
      "secondary": "var(--indigo-strong)",
      "success": "var(--success)",
      "error": "var(--danger)",
      "warning": "var(--warning-strong)",
      "info": "var(--accent-primary)",
      "dark": "var(--color-slate-850)",
      "light": "var(--surface-soft-muted)"
    },
    "gradients": {
      "primary": "var(--indigo-gradient)",
      "dark": "var(--slate-gradient)",
      "success": "var(--success-gradient)"
    },
    "animations": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "layout": {
    "sidebar": {
      "width": "250px",
      "collapsedWidth": "70px",
      "breakpoint": 768
    },
    "container": {
      "maxWidth": "1200px",
      "padding": "20px"
    }
  },
  "components": {
    "button": {
      "borderRadius": "10px",
      "padding": {
        "small": "8px 16px",
        "medium": "12px 24px",
        "large": "16px 32px"
      }
    },
    "card": {
      "borderRadius": "20px",
      "padding": "24px",
      "shadow": "0 10px 30px rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "borderRadius": "10px",
      "padding": "12px 16px",
      "fontSize": "14px"
    }
  },
  "toast": {
    "position": "top-right",
    "duration": 3000,
    "maxToasts": 3
  }
}