# Server configuration
OPENAI_API_KEY=your-openai-key-here
JWT_SECRET=change-this-secret
PORT=5000
# Render 배포 시 SQLite 파일 위치 (render.yaml 기본값과 동일)
DB_FILE=/var/data/loe.db
# 필요한 경우 CORS 허용 도메인 추가 (쉼표로 구분)
CORS_ORIGIN=http://localhost:3000

# AI generation budgets and models
# 안정성/속도 조절 값 (권장값: 재시도 8, 예산 30000ms)
LOE_AIGEN_MAX_RETRIES=8
LOE_AIGEN_BUDGET_MS=30000

# 문제 출제 모델 계층 (미지정 시 기본값)
# SECONDARY → PRIMARY → (선택) PREMIUM 순으로 자동 승격
LOE_OPENAI_SECONDARY_MODEL=gpt-4o-mini
LOE_OPENAI_PRIMARY_MODEL=gpt-4o
# LOE_OPENAI_PREMIUM_MODEL=gpt-4.1  # 고비용, 마지막 시도에서만 사용. 원하면 주석 해제

# 빈칸 문제에서 targetSpan이 없으면 실패로 간주하고 재시도(선택)
# LOE_STRICT_BLANK=1

# Client configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_THEME=light

# Email (Gmail 사용 시 앱 비밀번호 필요)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="League of English <your-email@gmail.com>" # 발신자 이름/주소 (대개 EMAIL_USER와 동일)
ADMIN_ALERT_EMAIL=jaekwonim@gmail.com

# 이메일 인증 코드 옵션 (선택)
EMAIL_CODE_EXPIRY_MINUTES=10
EMAIL_CODE_RESEND_COOLDOWN=60

# Optional
# LOG_LEVEL=info
